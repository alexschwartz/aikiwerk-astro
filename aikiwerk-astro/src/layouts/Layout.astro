---
export interface Props {
	title: string;
	lang?: string;
}

const { title, lang = 'de' } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Non-profit Aikido training community in Berlin-Steglitz. Open training sessions focusing on Aiki-principles and enjoyment of practice." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/styles/global.css" />
	</head>
	<body>
		<header>
			<div class="container">
				<div class="logo">
					<img src="/images/aikiwerk-logo.png" alt="Aikiwerk Logo" />
					<h1><a href="/">Aikiwerk</a></h1>
				</div>
				<nav>
					<ul>
						<li><a href="/">Start</a></li>
						<li><a href="/english">English</a></li>
						<li><a href="/aikido">Aikido</a></li>
						<li><a href="/kontakt">Kontakt</a></li>
					</ul>
				</nav>
			</div>
		</header>
		
		<slot />
		
		<footer>
			<div class="container">
				<p>&copy; {new Date().getFullYear()} Aikiwerk. Alle Rechte vorbehalten.</p>
				<p>Kontakt: <a href="mailto:training@aikiwerk.de">training@aikiwerk.de</a></p>
			</div>
		</footer>
	</body>
</html>